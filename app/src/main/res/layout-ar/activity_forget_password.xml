<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layoutBackgrawnd"
    android:layout_height="match_parent"
    android:rotationY="180"
    tools:context=".Activity.Branches">



    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/back"
                android:padding="13dp"
                android:onClick="backImg"
                android:src="@drawable/icon_back_copy"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/catNamee"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:rotationY="180"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/back"
                android:gravity="center_vertical"
                android:text="استعاده كلمه المرور"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:id="@+id/eemail"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:rotationY="180"
                        android:id="@+id/email"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="البريد الألكترونى* "
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:id="@+id/phoneee"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/pOne"
                        android:rotationY="180"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="كود التحقق* "
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:visibility="gone"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:id="@+id/ePassword"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/Password"
                        android:rotationY="180"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="@string/pass"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:visibility="gone"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:id="@+id/ecPassword"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/cPassword"
                        android:rotationY="180"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="@string/repass"
                        />



                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/comentLay"
                    android:layout_below="@+id/feed"
                    android:onClick="comentLay"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:layout_height="50dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#f61157"
                        android:text="أرسال"
                        android:rotationY="180"
                        android:gravity="center"
                        android:fontFamily="@font/exobold"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>