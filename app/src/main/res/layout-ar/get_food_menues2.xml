<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cat1" />


        <ImageView
            android:id="@+id/FoodMenuImageUrl"
            android:layout_width="110dp"
            android:layout_alignParentRight="true"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/piza" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:elevation="10dp"
            android:layout_marginLeft="37dp"
            android:layout_below="@+id/ggg"
            android:layout_marginBottom="10dp"
            android:layout_height="35dp">
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bakkkk"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="edfsdsdf"
                android:id="@+id/FfoodMenuDescription"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/white"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <TextView
            android:id="@+id/FoodMenuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/FoodMenuImageUrl"
            android:elevation="10dp"
            android:ellipsize="end"
            android:gravity="right"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/Home"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FoodMenuName"
            android:layout_marginRight="10dp"
            android:id="@+id/ggg"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/FoodMenuImageUrl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FoodMenuDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_regular"
                android:ellipsize="end"
                android:lineSpacingExtra="-5dp"
                android:gravity="center|right"
                android:lines="2"
                android:maxLines="2"
                android:text="@string/Home"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>