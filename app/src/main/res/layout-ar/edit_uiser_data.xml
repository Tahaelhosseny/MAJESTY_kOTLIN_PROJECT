<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:rotationY="180"
    android:orientation="vertical"
    tools:context=".Activity.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="match_parent">



            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:src="@drawable/rectangle_7"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:id="@+id/backk"
                android:onClick="backk"
                android:src="@drawable/icon_back_copy" />



            <TextView
                android:layout_width="247dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="تعديل الحساب "
                android:rotationY="180"
                android:id="@+id/sign"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="23dp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="120dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:id="@+id/eemail"
                    android:layout_height="60dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:id="@+id/email"
                        android:rotationY="180"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="البريد الالكترونى* "
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/titleee"
                        android:rotationY="180"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="اللقب* "
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/fName"
                        android:rotationY="180"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="الاسم الاول*"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:background="@null"
                        android:id="@+id/sName"
                        android:gravity="center|right"
                        android:rotationY="180"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="اسم العائله* "
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <EditText

                        android:id="@+id/pOne"
                        android:hint="@string/phone_num"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:background="@null"
                        android:gravity="center|right"
                        android:rotationY="180"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"

                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:background="@null"
                        android:id="@+id/pSecond"
                        android:rotationY="180"
                        android:inputType="phone"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="@string/second_phone_num"

                        />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_bg"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="horizontal"
                    android:layout_height="68dp">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/editProfile"
                        android:onClick="editProfile"
                        android:layout_marginTop="-5dp"
                        android:layout_gravity="center_vertical"
                        android:rotationY="180"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:text="تعديل"
                        />
                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>


    </ScrollView>
</RelativeLayout>