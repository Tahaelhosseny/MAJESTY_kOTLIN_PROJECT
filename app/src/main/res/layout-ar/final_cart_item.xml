<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/tit"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-0dp"
            android:layout_marginRight="110dp"
            android:layout_toRightOf="@+id/count"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:rotationY="180"
            android:text="pizza_margarita"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Medium"
            android:layout_weight="1"
            android:id="@+id/itemSize"
            android:gravity="center|left"
            android:textSize="16dp"
            android:rotationY="180"
            android:layout_below="@+id/ItemName"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="40dp"
            android:gravity="center"
            android:textColor="#0065d9"
            android:fontFamily="@font/cairo_black"
            android:textSize="20dp"
            android:rotationY="180"
            android:id="@+id/count"
            android:text="37 x "
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/onePrice"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text = "سعر السلعة : "
                android:textSize="10sp"
                android:rotationY="180"
                android:gravity="center|left"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="42 EGP"
                android:id="@+id/itemPrice"
                android:textSize="14sp"
                android:rotationY="180"
                android:gravity="center|right"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/tax"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/onePrice"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:rotationY="180"
                android:text="ضريبة :"
                android:textSize="10sp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="82 EGP"
                android:fontFamily="@font/exo__semibold"
                android:textSize="14sp"
                android:rotationY="180"
                android:id="@+id/taxPrice"
                android:gravity="center|right"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tax"
            android:id="@+id/totallll"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text = "الأجمالى :"
                android:textSize="10sp"
                android:rotationY="180"
                android:gravity="center|left"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="82 EGP"
                android:textSize="14sp"
                android:id="@+id/totalPrice"
                android:rotationY="180"
                android:gravity="center|right"
                android:layout_height="match_parent" />

        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/tit"
        android:layout_marginTop="10dp"
        android:src="#dedede"
        android:layout_height="2dp" />



    </RelativeLayout>