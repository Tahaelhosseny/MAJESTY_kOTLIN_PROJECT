<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:rotationY="180"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/backNow"
                android:padding="13dp"
                android:src="@drawable/icon_back_copy"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/backNow"
                android:layout_marginTop="20dp"
                android:id="@+id/catNamee"
                android:text="التقيم"
                android:rotationY="180"
                android:textColor="@color/black"
                android:fontFamily="@font/exosemibold"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_height="50dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle_1"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:id="@+id/eemail"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:rotationY="180"
                        android:inputType="textEmailAddress"
                        android:id="@+id/email"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="البريد الألكترونى* "
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:id="@+id/phoneee"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/pOne"
                        android:rotationY="180"
                        android:inputType="phone"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="@string/phone_num"
                        />




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_1"
                    android:id="@+id/nameee"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical"
                    android:layout_height="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:id="@+id/fName"
                        android:rotationY="180"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:hint="الأسم* "
                        />

                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp"
                    android:id="@+id/feed"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:lines="5"
                        android:gravity="top"
                        android:rotationY="180"
                        android:fontFamily="@font/exoregular"
                        android:padding="10dp"
                        android:id="@+id/note"
                        android:textSize="16sp"
                        android:hint="اخبرنا عن تقيمك او مشكلتك "
                        android:background="@null"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/comentLay"
                    android:layout_below="@+id/feed"
                    android:onClick="comentLay"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:layout_height="50dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#f61157"
                        android:text="ارسال"
                        android:rotationY="180"
                        android:gravity="center"
                        android:fontFamily="@font/exobold"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>