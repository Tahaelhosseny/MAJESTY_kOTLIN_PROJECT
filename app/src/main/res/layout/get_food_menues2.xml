<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cat1" />


        <ImageView
            android:id="@+id/FoodMenuImageUrl"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/piza" />


        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="37dp"
            app:cardCornerRadius="10dp"
             android:layout_below="@+id/ggg"
            android:layout_alignParentEnd="true"
            android:layout_height="45dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/cat1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="edfsdsdf"
                    android:id="@+id/FfoodMenuDescription"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/FoodMenuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/FoodMenuImageUrl"
            android:elevation="10dp"
            android:ellipsize="end"
            android:gravity="left"
            android:text="Margrita"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FoodMenuName"
            android:layout_marginLeft="10dp"
            android:id="@+id/ggg"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/FoodMenuImageUrl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FoodMenuDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center|left"
                android:lines="2"
                android:maxLines="2"
                android:text="Bell pepper, Tomato,Olive,Mozarella"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>