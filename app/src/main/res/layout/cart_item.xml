<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layoutBackgrawnd"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/layoutBackgrawnd"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/rounded_rectangle_8_copy_20"
            android:layout_height="match_parent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="90dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="200dp"
            android:id="@+id/FoodMenuImageUrl"
            android:src="@drawable/star1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_height="90dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:src="@color/black"
            app:riv_corner_radius="200dp"
            android:alpha=".7"
            android:id="@+id/FoodMenuImageAvatar"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_height="100dp" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/shape_712_copy_3"
            android:id="@+id/FoodMenuImageDel"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_height="50dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@+id/FoodMenuImageUrl"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:textSize="20dp"
                android:id="@+id/ItemName"
                android:textColor="@color/black"
                android:text="pizza_margarita"
                android:maxLines="1"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Medium"
                    android:layout_weight="1"
                    android:id="@+id/itemSize"
                    android:gravity="center|left"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:background="@drawable/cart_item_text_back"
                    android:layout_width="50dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:scaleType="fitXY"
                        android:id="@+id/min"
                        android:src="@drawable/minus_symbol"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="30dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:id="@+id/count"
                        android:text="1"
                        android:layout_height="50dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:src="@drawable/add"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/plus"
                        android:gravity="center"
                        android:layout_height="30dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text = "Item Price: "
                        android:textSize="10sp"
                        android:gravity="center|right"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="42 EGP"
                        android:id="@+id/itemPrice"
                        android:textSize="14sp"
                        android:gravity="center|left"
                        android:layout_height="match_parent" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text = "Total: "
                        android:textSize="10sp"
                        android:gravity="center|right"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:text="82 EGP"
                        android:textSize="14sp"
                        android:id="@+id/totalPrice"
                        android:gravity="center|left"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>