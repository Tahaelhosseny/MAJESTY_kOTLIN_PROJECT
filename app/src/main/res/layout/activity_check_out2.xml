<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fragmentBack"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckOut">

    <ImageView
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/back"
        android:onClick="back"
        android:padding="13dp"
        android:src="@drawable/icon_back_copy"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/back"
        android:layout_marginTop="20dp"
        android:text="CheckOut"
        android:id="@+id/catNamee"
        android:fontFamily="@font/exosemibold"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#0063d8"
        android:fontFamily="@font/exosemibold"
        android:id="@+id/del"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="Edit"
        android:textSize="16sp"
        android:layout_height="50dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_check_copy_2"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#0063d8"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="DONE"/>
    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="72dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cartItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/fragmentBack"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

           <LinearLayout
               android:layout_width="match_parent"
               android:background="@color/white"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:background="@color/white"
                   android:layout_marginRight="20dp"
                   android:layout_marginTop="20dp"

                   android:layout_marginLeft="20dp" android:orientation="horizontal"
                   android:layout_height="wrap_content">


                   <TextView
                       android:layout_width="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/exoregular"
                       android:text="Total Price(before tax)"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:fontFamily="@font/exoregular"
                       android:text="500"
                       android:id="@+id/totalPriceBeforeTax"
                       android:gravity="right"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"   android:background="@color/white"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">


                   <TextView
                       android:layout_width="match_parent"
                       android:fontFamily="@font/exoregular"
                       android:text="Total Tax"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="match_parent"
                       android:fontFamily="@font/exoregular"
                       android:text="500"
                       android:id="@+id/totalTax"
                       android:gravity="right"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_marginRight="20dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="20dp"
                   android:background="@color/white"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">


                   <TextView
                       android:layout_width="match_parent"
                       android:text="Delivery Fees"
                       android:fontFamily="@font/exoregular"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:text="500"
                       android:gravity="right"
                       android:id="@+id/deliveryFee"
                       android:layout_width="match_parent"
                       android:fontFamily="@font/exoregular"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:background="@color/white"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"  android:orientation="horizontal"
                   android:layout_height="wrap_content">


                   <TextView
                       android:layout_width="match_parent"
                       android:text="Discount"
                       android:fontFamily="@font/exoregular"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="match_parent"
                       android:fontFamily="@font/exoregular"
                       android:text="500"
                       android:gravity="right"
                       android:id="@+id/discount"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />
               </LinearLayout>


               <ImageView
                   android:layout_width="match_parent"
                   android:src="#dedede"
                   android:layout_height="2dp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:background="@color/white"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">


                   <TextView
                       android:layout_width="match_parent"
                       android:text="Grand Total"
                       android:textSize="18sp"
                       android:fontFamily="@font/exosemibold"
                       android:textColor="@color/black"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="match_parent"
                       android:textSize="18sp"
                       android:fontFamily="@font/exosemibold"
                       android:textColor="@color/black"                       android:text="500"
                       android:gravity="right"
                       android:id="@+id/grandTotal"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />
               </LinearLayout>




           </LinearLayout>



            <EditText
                android:layout_width="match_parent"
                android:lines="3"
                android:gravity="top"
                android:fontFamily="@font/exoregular"
                android:padding="10dp"
                android:id="@+id/note"
                android:textSize="12sp"
                android:hint="Order Notes"
                android:layout_margin="20dp"
                android:background="@drawable/rectangle_1_copy_5"
                android:maxLines="3"
                android:layout_height="100dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/ordera"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Est. Delivery Time: "
                    android:fontFamily="@font/exoregular"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/time"
                    android:fontFamily="@font/exosemibold"
                    android:textColor="@color/black"
                    android:text="25 Minutes"
                    android:layout_height="wrap_content" />
            </LinearLayout>







        </LinearLayout>




    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="footer"
        android:clickable="true"
        android:id="@+id/footer"
        android:background="@drawable/pink_gradiant"
        android:layout_height="70dp">



        <TextView
            android:layout_width="match_parent"
            android:text="Place Order"
            android:textSize="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/exobold"
            android:id="@+id/checktxt"
            android:textColor="@color/white"
            android:layout_height="40dp" />


    </LinearLayout>

</RelativeLayout>