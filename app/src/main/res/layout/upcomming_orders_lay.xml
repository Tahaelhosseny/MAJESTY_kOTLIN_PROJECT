<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="140dp"
    android:layout_marginRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rounded_rectangle_8_copy_20" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/FoodMenuImageUrl"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/star1"
            app:riv_corner_radius="200dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/FoodMenuImageUrl"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/oNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/exo__semibold"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Order #"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/exo__semibold"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/oNum"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemSize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:fontFamily="@font/exoregular"
                    android:gravity="center|left"
                    android:text="estimated arrival"
                    android:textColor="#8a8a8a"
                    android:textSize="16dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/estimatedArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:fontFamily="@font/exo__semibold"
                android:text="11:27 AM"
                android:textSize="16dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/exo__semibold"
                android:text="11:27 AM"
                android:textSize="16dp"
                android:textColor="@color/black" />

            <com.durranilab.labprogresslayout.LabProgressLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/estimatedArrival"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                app:autoProgress="true"
                app:cornerRadius="10"
                app:emptyColor="#dbdfe2"
                app:loadedColor="#00d985"
                app:maxProgress="100" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exoregular"
                    android:gravity="center|right"
                    android:text="Total: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo__semibold"
                    android:gravity="center|left"
                    android:text="82 EGP"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>