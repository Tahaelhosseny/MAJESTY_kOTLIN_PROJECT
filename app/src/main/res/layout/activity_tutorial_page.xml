<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.TutorialPage">


    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/tut"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">


    </LinearLayout>



    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:layout_width="match_parent"
        android:id="@+id/viewPager"
        android:layout_height="match_parent">
    </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>
    <com.rd.PageIndicatorView
        android:layout_width="wrap_content"
        android:id="@+id/pageIndicatorView"
        app:piv_radius="15dp"
        app:piv_animationType="drop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:id="@+id/getStarted"
        android:layout_above="@+id/ce_login"
        android:background="@drawable/button_bg"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:text="Getting Started"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="17dp"
        android:visibility="gone"
        android:layout_marginLeft="17dp"
        android:id="@+id/ce_login"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/signUp"
            android:background="@drawable/c_a"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:text="Create Account "
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Login \n"
            android:id="@+id/login"
            android:textSize="11sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_rectangle_1_copy_2"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>