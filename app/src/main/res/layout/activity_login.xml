<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activity.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="match_parent">



            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="190dp"
                android:src="@drawable/rectangle_7"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_back_copy" />



            <ImageView
                android:layout_width="247dp"
                android:layout_centerHorizontal="true"
                android:layout_height="66dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/vector_smart_object_copy_3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="115dp"
                android:background="@drawable/button_bg_copy_2"
                android:layout_marginRight="22dp"
                android:id="@+id/facebookLogin"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_height="58dp">




                <ImageView
                    android:layout_width="16dp"
                    android:src="@drawable/facebook"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="34dp" />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/flogin"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:text="Login with Facebook"
                    />



            </LinearLayout>


            <ImageView
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/rectangle_2_copy"
                android:layout_height="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/ortext"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                android:layout_marginTop="240dp"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="OR"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/mtxt"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                android:layout_marginTop="280dp"
                android:gravity="center_horizontal"
                android:text="Login with your email"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="310dp"
                android:background="@drawable/rectangle_1"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_height="60dp">




                <ImageView
                    android:layout_width="16dp"
                    android:src="@drawable/shape_1"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp" />




                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:background="@null"
                    android:id="@+id/email"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="-0.7sp"
                    android:hint="Email "
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="380dp"
                android:background="@drawable/rectangle_1"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_height="60dp">




                <ImageView
                    android:layout_width="16dp"
                    android:src="@drawable/shape_2"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp" />




                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/password"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:textColor="#666666"
                    android:background="@null"
                    android:lineSpacingExtra="-0.7sp"
                    android:hint="Password "
                    />



            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/remember"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="450dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="7.7sp"
                android:id="@+id/remMe"
                android:layout_marginTop="450dp"
                android:layout_toRightOf="@+id/remember"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="Remember me "
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="7.7sp"
                android:id="@+id/forget"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:textColor="#666666"
                android:layout_marginTop="450dp"
                android:lineSpacingExtra="17.7sp"
                android:gravity="center_vertical"
                android:text="Forgot Password?"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="490dp"
                android:background="@drawable/button_bg"
                android:layout_marginRight="22dp"
                android:id="@+id/login"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_height="68dp">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/loginnnn"
                    android:layout_marginTop="-5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:text="Login  Now"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="560dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#e6999999"
                    android:textSize="12sp"
                    android:id="@+id/dont"
                    android:text="Donâ€™t have an account ? "
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:text=" Sign Up"
                    android:id="@+id/sign"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>