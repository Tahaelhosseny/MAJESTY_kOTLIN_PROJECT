<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fragmentBack"
    android:layout_height="match_parent"
    tools:context=".Activity.OneItem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/foodImage"
                android:scaleType="fitXY"
                android:src="@drawable/piz2"
                android:layout_height="250dp" />

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/gradiant_back"
                android:layout_height="250dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/back"
                android:padding="13dp"
                android:src="@drawable/icon_back_copy_22"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/back"
                android:layout_marginTop="20dp"
                android:text="Pizaaa"
                android:id="@+id/catName"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:padding="13dp"
                android:id="@+id/fav"
                android:layout_alignParentRight="true"
                android:src="@drawable/group_16"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/below"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/foodImage"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:text="Margreta"
                        android:id="@+id/nameeee"
                        android:textSize="20sp"
                        android:lines="2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:text="Margreta ,lkegflk g,wrlkjkjr ,lkjfdskj ,fds gmn"
                        android:id="@+id/deseee"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center_vertical"
                        android:layout_height="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/img1"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/star1"
                            android:layout_height="20dp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/img2"
                            android:layout_marginRight="5dp"

                            android:src="@drawable/star1"
                            android:layout_height="20dp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/img3"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/star1"
                            android:layout_height="20dp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/img4"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/star"
                            android:layout_height="20dp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/img5"
                            android:src="@drawable/star"
                            android:layout_height="20dp" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="5 of 12"
                        android:id="@+id/ratetxteee"
                        android:textSize="8sp"
                        android:gravity="center"
                        android:layout_marginRight="118dp"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rec"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/below"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rec"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="55dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_gravity="top"
                        android:src="@drawable/rounded_rectangle_1_copy_6"
                        android:layout_height="55dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:scaleType="fitXY"
                            android:id="@+id/min"
                            android:src="@drawable/minus_symbol"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_width="30dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:id="@+id/counteee"
                            android:text="1"
                            android:layout_height="50dp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:textColor="@color/white"
                            android:src="@drawable/add"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/plus"
                            android:gravity="center"
                            android:layout_height="30dp" />
                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:id="@+id/addToCartt"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:scaleType="fitXY"
                        android:id="@+id/addToCart"
                        android:src="@drawable/button_bg_copy_17"
                        android:layout_height="60dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp"
                        android:id="@+id/adtxteee"
                        android:layout_centerHorizontal="true"
                        android:text="Add To Cart"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>