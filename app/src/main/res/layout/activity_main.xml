<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:background="@color/fragmentBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        android:background="@color/fragmentBack"
        tools:context=".Activity.MainActivity">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="212dp"
                android:src="@drawable/ic_shape_846"
                android:layout_marginTop="50dp"
                android:layout_alignParentRight="true"
                android:layout_height="228dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/header">


                <ImageView
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_marginTop="-70dp"
                    android:layout_height="70dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/menu"
                    android:padding="13dp"
                    android:src="@drawable/rectangle_516_copy_3"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/back"
                    android:visibility="invisible"
                    android:padding="13dp"
                    android:src="@drawable/icon_back_copy_2"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="favorites"
                    android:textColor="@color/black"
                    android:id="@+id/headerText"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/menu"
                    android:layout_height="24dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/noti"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:padding="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/shape_654_copy"/>


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/notification"/>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:id="@+id/notiNum"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="65"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/menuDr"
                    android:layout_height="50dp"
                    />



            </RelativeLayout>
            <FrameLayout
                android:id="@+id/frameContainer"
                android:layout_below="@+id/header"
                android:layout_marginBottom="70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <RelativeLayout
                android:layout_width="85dp"
                android:id="@+id/cart"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_height="70dp"
                >

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/shape_683_copy" />
                <ImageView
                    android:layout_width="20dp"
                    android:id="@+id/cartIm"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/notification_copy_3"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:id="@+id/cartTxt"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="65"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:id="@+id/bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/home"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/homeIm"
                        android:src="@drawable/icon_home"
                        android:layout_height="26dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/Home"
                        android:id="@+id/htxt"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/menuu"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/menu"
                        android:id="@+id/menuIm"
                        android:layout_height="26dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/Menu"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:id="@+id/mtxt"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/favorite"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/favoriteIm"
                        android:src="@drawable/favorite"
                        android:layout_height="26dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/Favorite"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:id="@+id/ftxt"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/orders"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:id="@+id/ordersIm"
                        android:src="@drawable/ordera"
                        android:layout_height="27dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/Orders"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:id="@+id/otxt"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/fragmentBack"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            app:riv_corner_radius="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:scaleType="fitXY"
            android:id="@+id/uLogo"
            android:src="@drawable/capa_1"
            android:layout_height="100dp" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Taha Elhosseny"
            android:textSize="16sp"
            android:layout_below="@+id/uLogo"
            android:layout_centerHorizontal="true"
            android:id="@+id/userName"
            android:textColor="#202020"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Edit Profile"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/exoregular"
            android:id="@+id/editProfile"
            android:layout_below="@+id/userName"
            android:textColor="#cc666666"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="212dp"
            android:src="@drawable/ic_shape_846"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-50dp"
            android:layout_marginLeft="-50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_height="228dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/editProfile"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_above="@+id/logOutLayout"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#202020"
                android:id="@+id/addressBok"
                android:fontFamily="@font/exoregular"
                android:text="My Address Book"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#202020"
                android:text="Our Branches"
                android:id="@+id/branches"
                android:fontFamily="@font/exoregular"
                android:gravity="center"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#202020"
                android:text="Contact Us"
                android:fontFamily="@font/exoregular"
                android:gravity="center"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#202020"
                android:fontFamily="@font/exoregular"
                android:text="Setings"
                android:layout_height="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/logOutLayout"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/power"
                android:layout_height="50dp" />


            <TextView
                android:layout_width="wrap_content"
                android:text="LogOut"
                android:id="@+id/logouttxt"
                android:textSize="16sp"
                android:layout_below="@+id/uLogo"
                android:layout_centerHorizontal="true"
                android:textColor="#202020"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


</RelativeLayout>

</android.support.v4.widget.DrawerLayout>
