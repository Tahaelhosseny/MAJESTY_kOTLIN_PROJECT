<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layoutBackgrawnd"
    android:layout_height="match_parent"
    tools:context=".Activity.Branches">

    <ImageView
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/back"
        android:padding="13dp"
        android:src="@drawable/icon_back_copy"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/catNamee"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/back"
        android:gravity="center_vertical"
        android:text="Our Branches"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/branchesRec"
        android:layout_marginTop="70dp"
        android:layout_height="30dp"/>



    <fragment
        android:id="@+id/googleMap"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="50dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:id="@+id/areaSpinner"
                android:overlapAnchor="false"
                android:layout_height="match_parent">

            </android.support.v7.widget.AppCompatSpinner>
            <ImageView
                android:layout_width="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/spinner_arrow"
                android:layout_height="50dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/backImg"
             android:onClick="backImg"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:background="@null"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="5dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/piz2"
                            android:layout_height="200dp" />
                    </android.support.v7.widget.CardView>


                    <ImageView
                        android:layout_width="150dp"
                        android:elevation="10dp"
                        android:layout_marginTop="150dp"
                        android:src="@drawable/rounded_rectangle_8_copy_14"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_width="150dp"
                        android:id="@+id/name"
                        android:elevation="10dp"
                        android:lines="2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:text="Margrita"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_marginTop="150dp"
                        android:layout_height="60dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/address"
                        android:padding="5dp"

                        android:layout_marginTop="220dp"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content" />



                    <android.support.v7.widget.CardView

                        app:cardCornerRadius="25dp"
                        android:onClick="direction"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/direction"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/address"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="#f81242"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">


                            <ImageView
                                android:layout_width="40dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_forma_1"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="30dp"
                                android:layout_height="40dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Direction"
                                android:textSize="20sp"
                                android:layout_marginRight="40dp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>





                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>