<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="280dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/rounded_rectangle_8_copy_1515"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/FoodMenuImageUrl"
                android:src="@drawable/piza"
                android:layout_height="180dp"
                />
        </android.support.v7.widget.CardView>




        <ImageView
            android:layout_width="150dp"
            android:elevation="10dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/rounded_rectangle_8_copy_14"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="150dp"
            android:id="@+id/FoodMenuName"
            android:elevation="10dp"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="Margrita"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="130dp"
            android:layout_height="60dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="200dp">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="Bell pepper, Tomato,Olive,Mozarella"
                android:id="@+id/FoodMenuDescription"
                android:layout_weight="1"
                android:textSize="12sp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="150dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="13sp"
                android:text="M : 41"
                android:id="@+id/FfoodMenuDescription"
                android:layout_height="60dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="50dp" android:padding="13dp"
            android:id="@+id/fav"
            android:layout_alignParentRight="true"
            android:src="@drawable/group_16"
            android:layout_margin="3dp"
            android:elevation="10dp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_width="50dp"
            android:padding="20dp"
            android:id="@+id/fav2"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/favstar2"
            android:elevation="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:layout_height="50dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>